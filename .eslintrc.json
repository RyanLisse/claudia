{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "globals": {
    "NodeJS": "readonly",
    "process": "readonly",
    "console": "readonly",
    "TextEncoder": "readonly",
    "TextDecoder": "readonly",
    "window": "readonly",
    "navigator": "readonly",
    "setInterval": "readonly",
    "clearInterval": "readonly",
    "setTimeout": "readonly",
    "clearTimeout": "readonly"
  },
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "warn",
    "no-console": "warn"
  },
  "ignorePatterns": [
    "dist/**/*",
    "build/**/*",
    "node_modules/**/*",
    "*.config.js",
    "*.config.ts"
  ]
}