    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.31.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "sharp": "^0.34.2",
    "typescript": "~5.6.2",
