# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/claudia_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-different-from-jwt
JWT_REFRESH_EXPIRES_IN=7d

# API Keys
API_KEY=your-api-key-for-external-access
CLAUDE_API_KEY=your-claude-api-key

# Rate Limiting & Redis
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,https://claudia.app

# Logging
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12

# External Services
MAIL_SERVICE_URL=
MAIL_API_KEY=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_TRACING=false